<Window x:Class="Sergioteacher.Csharp04.MensajeBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="File Dialog Example" Height="450" Width="800" Background="#FFBEDE97">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Content="Editor de Archivos" FontSize="22" HorizontalAlignment="Center" Margin="10" Grid.Row="0" />

        <TextBox x:Name="txtEditor" Grid.Row="1" Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="OpenFile" Content="Abrir Archivo" Click="OpenFile_Click" Margin="5" Width="120" Height="40" Background="#FFCBA7A7" />
            <Button x:Name="SaveFile" Content="Guardar Archivo" Click="SaveFile_Click" Margin="5" Width="120" Height="40" Background="#FFCBA7A7" />
        </StackPanel>
    </Grid>
</Window>